{
  "name": "refcompo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "concurrently -n FRONTEND,BACKEND -c cyan,magenta \"npm run dev -w frontend\" \"npm run dev -w backend\"",
    "build": "npm run build -ws",
    "test": "npm run test -ws",
    "lint": "npm run lint -ws",
    "typecheck": "npm run typecheck -ws",
    "format": "prettier --write .",
    "validate:vercel": "node scripts/validate-vercel.cjs"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}


